---
import Layout from "../../../layouts/Layout.astro";
---

<Layout title="phro.design â€“ viewer" description="Internal 3D viewer test.">
  <main class="page">
    <h1>viewer</h1>
    <p class="lede">internal tooling. not linked.</p>

    <div
      class="online_3d_viewer viewer"
      data-model="/models/test.glb"
      aria-label="3d model viewer"
    ></div>
  </main>

  <script>
    import { Init3DViewerElements } from "online-3d-viewer";

    function mountLabViewer() {
      document.querySelectorAll(".online_3d_viewer[data-model]").forEach((el) => {
        const dataModel = el.getAttribute("data-model");
        if (dataModel) {
          el.setAttribute("model", dataModel);
        }
      });

      Init3DViewerElements(() => {
        console.log("3D viewer initialized");
      });
    }

    if (document.readyState === "loading") {
      window.addEventListener("DOMContentLoaded", () => mountLabViewer(), { once: true });
    } else {
      mountLabViewer();
    }
  </script>
</Layout>

<style>
  .page {
    min-height: 100vh;
    padding: 150px 20px 64px;
    max-width: 980px;
    margin: 0 auto;
    background: #000;
    color: #fff;
  }

  h1 {
    margin: 0 0 14px;
    font-family:
      ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
      "Courier New", monospace;
    font-size: clamp(28px, 4vw, 48px);
    font-weight: 500;
    letter-spacing: -0.02em;
    text-transform: lowercase;
  }

  .lede {
    margin: 0 0 22px;
    max-width: 64ch;
    line-height: 1.6;
    opacity: 0.75;
  }

  /* Viewer container: no fancy UI systems, just a stable frame */
  .viewer {
    width: 100%;
    height: min(68vh, 720px);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: #000;
    overflow: hidden;
  }
</style>
