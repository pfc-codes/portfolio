---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
const items = projects.filter(p => p.facets.includes("3d"));
---
<Layout title="phro.design — 3D" description="3D rendering projects.">
  <main style="padding: clamp(24px, 5vw, 72px);">
    <h1 style="letter-spacing: .18em; text-transform: uppercase; font-size: 13px; color: rgba(255,255,255,.72);">
      3D Renders
    </h1>

    <div style="margin-top: 22px; display: grid; gap: 14px;">
      {items.map(p => (
        <a href={`/3d/${p.slug}`} data-transition="right"
           style="text-decoration: none; color: rgba(255,255,255,.86); border: 1px solid rgba(255,255,255,.12); padding: 14px 16px; border-radius: 14px;">
          <div style="font-size: 14px; letter-spacing: .02em;">{p.title}</div>
          <div style="margin-top: 6px; font-size: 12px; color: rgba(255,255,255,.55);">
            {p.year} · {p.client}
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>
