---
import "../styles/global.css";
import SiteHeader from "@/components/SiteHeader.astro";
import InnerStarfield from "@/components/InnerStarfield.astro";

const {
  title = "phro.design",
  description,
  scroll = "y",
  bodyClass = "",
} = Astro.props;

const scrollClass = scroll === "x" ? "overflow-hidden" : "overflow-x-hidden";
const isHome = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <link
      rel="preload"
      href="/pointcloud/character.points.bin"
      as="fetch"
      type="application/octet-stream"
      crossorigin="anonymous"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>

  <body
    class={`bg-black text-white font-sans antialiased ${scrollClass} ${bodyClass}`}
    style="scrollbar-gutter: stable;"
  >
    <style>
      :root {
        --ease-out: cubic-bezier(0.22, 1, 0.36, 1);
      }

      .page {
        min-height: 100vh;
        transform: translateX(0);
        opacity: 1;
        transition:
          transform 520ms var(--ease-out),
          opacity 520ms var(--ease-out);
        will-change: transform, opacity;
      }

      html.js .page {
        transform: translateX(18px);
        opacity: 0;
      }

      html.js .page.is-entered {
        transform: translateX(0);
        opacity: 1;
      }

      @media (prefers-reduced-motion: reduce) {
        .page {
          transition: none !important;
          transform: none !important;
          opacity: 1 !important;
        }
      }
    </style>

    {!isHome && <InnerStarfield />}

    {!isHome && <SiteHeader />}

    <div id="page" class="page">
      <slot />
    </div>

    <script is:inline>
      (() => {
        document.documentElement.classList.add("js");

        const prefersReduced = window.matchMedia(
          "(prefers-reduced-motion: reduce)"
        ).matches;
        const page = document.getElementById("page");
        if (!page) return;

        if (!prefersReduced)
          requestAnimationFrame(() => page.classList.add("is-entered"));
        else page.classList.add("is-entered");
      })();
    </script>
  </body>
</html>
